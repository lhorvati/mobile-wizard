/* SELECT STYL ======================================= */

.select-wrap
    width: 100%
    height: 75px
    box-sizing()
    padding: 0 16px
    flexbox()
    align-items: flex-end

    .select
        flexbox()
        justify-content: space-between
        align-items: center
        width: 100%
        box-sizing()
        padding: 10px 10px 10px 5px
        margin-bottom: 10px
        font-size: 14px
        font-weight: 400
        border-bottom: 1px solid inputBorderColor

    .select-list
        position: absolute
        background: #000
        width: calc(100% - 32px)
        flexbox()
        flex-flow: column nowrap
        border-radius(3px)
        box-sizing()
        padding: 5px 0
        z-index: 10

        .select-list__item
            box-sizing()
            padding: 16px
            font-size: 14px






