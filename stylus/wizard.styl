    flex-flow: column nowrap
    justify-content: flex-start
    align-items: center
    width: 100%
    height: 100%

    .loader__icon
        display: block
        width: 70px
        height: 70px
        // background-image: url("img/loader/loader96@48.png")
        // background-repeat: no-repeat
        // background-size: 50px
        position: relative
        margin-top: 20%

    .loader__text
        width: 80%
        text-align: center
        margin-top: 50px


