/* LOGIN CSS */




/* TOP ======================================= */

.login-header,
.info-header
	background-color: headerBG
	position: relative
	height: 25%


	.login-title,
	.info-title,
	.info
		position: absolute
		bottom: 0
		height: 56px !important


	.login-title,
	.info-title
		box-sizing()
		font-size: h1Size
		font-weight: h1Weight
		color: h1Color
		left: 16px
		width: auto !important
		
		flexbox()
		align-items: center
		justify-content: center


	.info
		right: 0
		width: 56px !important
		display: block
		
		background: url('img/info.png')
		background-size: 24px !important
		background-position: center !important
		background-repeat: no-repeat !important
		border: none
		

	.back
		position: absolute
		top: 0
		left: 0
		width: 56px !important
		height: 56px !important
		
		background: url('img/back.png')
		background-size: 24px !important
		background-position: center !important
		background-repeat: no-repeat !important
		border: none
		


		
/* MAIN ======================================= */



/* Login Body */

.login-body
	padding-top: 20px
	box-sizing: border-box
	position: relative
	height: 75%
	overflow: auto !important
	
	/* Body Scroll hah */
	.tr-layout-auto.tr-panel
		overflow: auto !important


	.trooper-input
		height: 80px

	/* Login Input fix */
	.trooper-input .input-wrapper
		margin: 0 16px
		
	


/* More Options Dropdown */
.login-body 
	
	.form-row
		height: 100px
		flexbox()
		justify-content: space-between
		align-items: flex-start
		
	
	.dropdown-wrap,
	button
		margin-top: 20px


	.dropdown-wrap
		line-height: 36px
		margin-left: 16px
		font-size: 12px
		
		.main-label
			color: color6

	
	
	
	/* Password message */
	.pass-msg
		line-height: 26px
		margin-left: 16px
		font-size: 12px
		font-weight: 100
		color: #aaa
	


/* INFO ======================================= */

/* Info Body */
.info-body
	padding: 40px 16px
	box-sizing: border-box
	background: color7
	color: color8
	height: 75%
	overflow-y: auto
	




/* OAUTH ======================================= */


.oauth-wrapper
	position: relative
	width: 100%
	margin-bottom: 40px
	

.oauth-text
	text-align: center
	margin: 0 auto
	font-size: 12px
	color: color8
	height: 40px




.oauth
	width: 205px !important
	height: 40px !important
	margin: 0 auto
	flexbox()
	justify-content: space-between
	

	.bitbucket,
	.facebook,
	.google,
	.github
		width: 40px !important
		height: 40px !important
		background-size: 40px !important
		background-position: center !important
		background-repeat: no-repeat !important
		border: none

	.bitbucket
		background: url('img/oauth/bitbucket-inactive@2x.png')
		
	.facebook
		background: url('img/oauth/facebook-inactive@2x.png')
		
	.google
		background: url('img/oauth/google-plus-inactive@2x.png')
		
	.github
		background: url('img/oauth/github-inactive@2x.png')
				
				









