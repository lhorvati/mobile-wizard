/* FIND & REPLACE ======================================= */

.find-wrapper,
.replace-wrapper
	background: color1

	.input-wrapper
		width: 100%
		height: 100%

		input
			display: block
			width: 100%
			height: 100%
			box-sizing: border-box
			padding: 10px 5px
			font-size: 18px
			border: none
			font-family: Roboto
			font-size: 16px
			font-weight: 300
			color: color4
			background: color1
			-webkit-box-shadow: none
			outline: none


/* Bottom Slide Panel */
.menu-check-item > div
	flexbox()
	flex-flow: row nowrap
	align-items: center
	
	.icon,
	.toggle
		width: 48px
		height: 48px
		
	.label
		color: color4
		flex: 3
		box-sizing()
		padding: 0 5px
	