/* GOTO ANYTHING STYL */

.goto-wrapper
	background: color1
	
	/* Header Tabs is handled in "fileExplorer.styl" */
	
	
	/* Goto Input */
	.goto-input
		flexbox()
		flex: 1
		background: color1
		box-sizing()
		border: none
		outline: none
		
		
	/* Goto List */
	.goto-data-list:empty
		display: none

	.goto-data-list
		width: 100%
		height: 100%
		overflow: auto
		background: color3
		box-shadow(shadowLvl4)
		padding: 10px 0
		box-sizing()
		

		
		/* List row */
		li
			flexbox()
			flex-flow: column nowrap
			justify-content: center
			height: 56px
			
			box-sizing()
			padding: 0 16px
		

		.goto-data-primary,
		.goto-data-secondary
			ellipsis()
			

		.goto-data-secondary
			font-size: 12px
			color: rgba(214,203,203,0.5)