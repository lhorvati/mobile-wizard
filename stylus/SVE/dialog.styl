/* DIALOG STYL ======================================= */


.dialog-overlay
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 100

/* Dialog Overlay */
.dialog-overlay
	background: rgba(0, 0, 0, 0.4)
	flexbox()
	justify-content: center
	align-items: center
	

	/* Dialog Wrapper ======================= */
	.dialog-wrapper
		width: calc(100% - 80px)
		min-height: 100px
		background: color7
		box-shadow(shadowLvl5)
		
		flexbox()
		flex-flow: column nowrap
		

		/* Input overwrite */
		input
			margin-top: 25px


		.dialog-header,
		.dialog-content,
		.dialog-footer
			box-sizing()
			color: color8
			flexbox()
			align-content: center
			

		/* Dialog Header */
		.dialog-header
			padding: 24px 24px 0 24px
			font-size: fontSize4


		/* Dialog Content */
		.dialog-content
			padding: 0 24px
			margin-top: 20px



		/* Dialog Content */
		.dialog-footer
			height: 52px
			margin-top: 24px
			padding: 8px
			justify-content: flex-end














			